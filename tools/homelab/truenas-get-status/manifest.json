{
  "name": "truenas-get-status",
  "version": "1.0.0",
  "description": "Get TrueNAS system status including CPU, memory, storage pools, and running apps",
  "category": "homelab",
  "voice_triggers": [
    "what's my TrueNAS status",
    "how's my NAS doing",
    "check TrueNAS"
  ],
  "required_services": ["truenas"],
  "required_credentials": [
    {
      "credential_type": "httpHeaderAuth",
      "name": "truenas_api",
      "description": "TrueNAS API key (Header Auth)"
    }
  ],
  "required_variables": [
    {
      "name": "TRUENAS_URL",
      "description": "Your TrueNAS instance URL",
      "example": "http://192.168.1.100"
    }
  ],
  "author": {
    "github": "cmac86"
  },
  "tier": "community",
  "tags": ["homelab", "truenas", "nas", "server", "monitoring"],
  "dependencies": [],
  "created": "2026-01-14",
  "updated": "2026-01-14"
}
